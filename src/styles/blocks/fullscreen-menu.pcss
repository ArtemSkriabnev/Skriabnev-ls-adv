  }
  
}

.fullscreen-menu__close {
  display: flex;
  justify-content: flex-end;
  // width: 25px;
  // height: 25px;

  margin-top: 65px;
  margin-right: 50px;
  
  // transform: rotate(45deg);
  
}

.fullscreen-menu__close-icon {
  width: 20px;
  height: 3px;
  background-color: $text-color;
  // border-radius: 50%;
  position: relative;
  transform: rotate(45deg);
 
  
  &:after {
    content: '';
    display: block;
    position: absolute;
    width: 4px;
    height: 20px;
    background-color: $text-color;
    // border-radius: 50%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}

