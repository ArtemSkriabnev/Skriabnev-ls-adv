  // justify-content: space-between;
  position: fixed;
  padding-top: 10px;
  top: 0;
  bottom: 0;
  // left: 0;
  width: 320px;
  right: 0;
  background-color: white;
  // color: $white;
  z-index: 20;
  opacity: 0;

  @include phones {
  	width: 100%;
  }
