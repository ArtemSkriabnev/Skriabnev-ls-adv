.form {
  padding-right: 150px;
  @include tablets {
    padding-right: 0;
    text-align: center;
  }
}

.form__row {
  display: flex;
  margin-bottom: 30px;
  @include phones{
    flex-direction: column;
  }
}

.form__label {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: 45px;
  position: relative;
  align-items: flex-start;

  @include phones{
    margin-right: 0;
    align-items: center;
  }

  &:last-child {
    margin-right: 0;
  }
}

.form__title {
  opacity: 0.3;
  font-weight: 600;
  padding-left: 40px;
  margin-top: 10px;
  margin-bottom: 10px;
}

.form__input {
  outline: none;
  border: none;
  background-color: transparent;
  border-bottom: 1px solid black;
  padding: 20px 40px;
  font-weight: 600;

  @include phones{
    width: 90%;
    padding: 20px 0;
    text-align: center;
  }
}



.form__icon {
  width: 25px;
  opacity: 0.3;
  position: absolute;
  bottom: 19%;
  left: 0;
 
  @include tablets{
    display: none;
  }
}

.form__textarea {
  padding: 20px 45px;
  resize: none;
  border: none;
  font-weight: 600;
  border-bottom: 1px solid $text-color;
  background: transparent;
  
  @include phones{
    width: 90%;
    padding: 20px 0;
  }
}

.form__btn-submit {
  background-image: linear-gradient(to right, #9300e8 0%, #4a00ed 100%);
  border: none;
  padding: 33px 120px;
  border-radius: 40px 5px;
  color: #ffffff;
  margin-top: 38px;
  font-size: 18px;
  font-weight: 700;
  text-transform: uppercase;
  &:hover {
    background-image: linear-gradient(to right, #4a00ed 0%, #9300e8 100%);
  }
}