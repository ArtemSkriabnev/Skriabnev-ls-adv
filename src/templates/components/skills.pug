script(type="text/x-template")#skills-list
  ul.skills-graphic
      li.skill-graphic__item(v-for="skill in skills")
        skills-row(
          :skill="skill"
        )


script(type="text/x-template")#skills-row
  .skill-row
    .skills_row__title {{skill.skillsGroup}}
    .skills-row__content
      ul.skills
        li.skills__item(v-for="(skillPercent, skillName) in skill.skills")
          skill(
            :skillName="skillName"
            :skillPercent="skillPercent"
          )


script(type="text/x-template")#skill
  .skill
    <svg width="100%" height="100%" viewBox="0 0 100 100" class="donut">
      <linearGradient id="linear-gradient">
        <stop offset="0%" stop-color="#9300e8"/>
        <stop offset="100%" stop-color="#4a00ed"/>
      </linearGradient>
      <circle class="donut-ring" cx="50" cy="50" r="40" fill="transparent" stroke="#e9e9e9" stroke-width="5"></circle>
      <circle class="donut-segment" cx="50" cy="50" r="40" ref="color-circle" fill="transparent" stroke="url(#linear-gradient)" stroke-width="12" stroke-dasharray="251" stroke-dashoffset="100" transform='rotate(180 50 50)'></circle>
    </svg>
    .skill__title {{skillName}}